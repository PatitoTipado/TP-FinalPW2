<div class="bg-light">

<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">¿Qué problema encontraste?</h3>

            <!-- Formulario -->
            <form action="/reporte/realizarReporte" method="POST">
                <!-- Categorías de reporte -->
                <div class="mb-3">
                    <label for="categoriaReporte" class="form-label">Selecciona una categoría:</label>
                    <select class="form-select" id="categoriaReporte" name="categoria" required>
                        <option value="" selected disabled>Elige una opción...</option>
                        <option value="error_respuesta">Error en la respuesta</option>
                        <option value="pregunta_confusa">Pregunta confusa</option>
                        <option value="contenido_inapropiado">Contenido inapropiado</option>
                        <option value="problema_tecnico">Problema técnico</option>
                        <option value="otro">Otro</option>
                    </select>
                </div>

                <!-- Descripción del problema -->
                <div class="mb-4">
                    <label for="descripcionProblema" class="form-label">Describe el problema (opcional):</label>
                    <textarea class="form-control" id="descripcionProblema" name="descripcion" rows="4" placeholder="Escribe aquí una breve descripción..."></textarea>
                </div>

                <!-- Botón enviar -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Enviar reporte</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</div>