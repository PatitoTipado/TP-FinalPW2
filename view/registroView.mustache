 <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h2 class="text-center">Registrarse</h2>
                <form id="registroForm" class="needs-validation" method="POST" action="/Registro/registrarUsuario" enctype="multipart/form-data">

                    <!-- Nombre -->
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Ingresar nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" pattern="[A-Za-z\s]+" title="El nombre solo debe contener letras" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un nombre válido (solo letras).
                        </div>
                    </div>

                    <!-- Año de nacimiento -->
                    <div class="mb-3">
                        <label for="anio" class="form-label">Ingresar año de nacimiento</label>
                        <input type="number" class="form-control" id="anio" name="anio" min="1900" max="2024" required>
                        <div class="invalid-feedback">
                            Ingresa un año de nacimiento válido.
                        </div>
                    </div>

                    <!-- Sexo -->
                    <div class="mb-3">
                        <label for="sexo" class="form-label">Sexo</label>
                        <select class="form-select" id="sexo" name="sexo" required>
                            <option value="" disabled selected>Selecciona</option>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                            <option value="no-cargar">Prefiero no cargarlo</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor, selecciona una opción.
                        </div>
                    </div>

                    <!-- País -->
                    <div class="mb-3">
                        <label for="pais" class="form-label">País</label>
                        <input type="text" class="form-control" id="pais" name="pais" required>
                        <div class="invalid-feedback">
                            Ingresa un país válido.
                        </div>
                    </div>

                    <!-- Ciudad -->
                    <div class="mb-3">
                        <label for="ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="ciudad" name="ciudad" required>
                        <div class="invalid-feedback">
                            Ingresa una ciudad válida.
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Mail</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                        <div class="invalid-feedback">
                            Ingresa un correo electrónico válido.
                        </div>
                    </div>

                    <!-- Contraseña -->
                    <div class="mb-3">
                        <label for="contrasena" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="contrasena" name="contrasena" required>
                        <div class="invalid-feedback">
                            La contraseña debe contener al menos 8 caracteres, incluyendo mayúsculas, minúsculas y números.
                        </div>
                    </div>

                    <!-- Repetir Contraseña -->
                    <div class="mb-3">
                        <label for="repetir-contrasena" class="form-label">Repetir contraseña</label>
                        <input type="password" class="form-control" id="repetir-contrasena" name="repetir-contrasena" required>
                        <div class="invalid-feedback">
                            Las contraseñas no coinciden.
                        </div>
                    </div>

                    <!-- Nombre de usuario -->
                    <div class="mb-3">
                        <label for="usuario" class="form-label">Ingresa tu nombre de usuario</label>
                        <input type="text" class="form-control" id="usuario" name="usuario" required>
                        <div class="invalid-feedback">
                            Ingresa un nombre de usuario válido.
                        </div>
                    </div>

                    <!-- Foto de perfil agregate la foto-->
                    <div class="mb-3">
                        <label for="foto" class="form-label">Ingresar foto de perfil</label>
                        <input type="file" class="form-control" id="foto" name="foto">
                    </div>
                    
                    <!-- Botón de Registro -->
                    <button class="btn btn-primary w-100" type="submit">Registrarse</button>

                </form>
            </div>
        </div>
    </div>

 {{#resultado}}
 <h2> {{resultado}}</h2>"
 {{/resultado}}

 {{#vacio}}
     <h2> {{vacio}}</h2>"
 {{/vacio}}

 {{#invalido}}
     <h2> {{invalido}}</h2>"
 {{/invalido}}


    <script>
        // Validar coincidencia de contraseñas
        document.getElementById('registroForm').addEventListener('submit', function (event) {
            var form = this;
            if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }

            // Validar que las contraseñas coincidan
            var password = document.getElementById('contrasena').value;
            var confirmPassword = document.getElementById('repetir-contrasena').value;

            if (password !== confirmPassword) {
                document.getElementById('repetir-contrasena').setCustomValidity("Las contraseñas no coinciden");
            } else {
                document.getElementById('repetir-contrasena').setCustomValidity("");
            }

            form.classList.add('was-validated');
        }, false);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>