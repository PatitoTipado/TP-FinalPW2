        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        margin-bottom: 10px;
        transition: background-color 0.3s;
    }
    .opcion:hover {
        background-color: #e0f0ff;
    }
    .opcion-seleccionada {
        background-color: #007bff;
        color: white;
    }
    .hidden-radio {
        display: none;
    }

