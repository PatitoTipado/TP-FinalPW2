<div class="w3-container">
    <div class="w3-card-4 register-box w3-light-grey">
        <form class="w3-container" method="POST" action="/Login/validarLogin">
            <h2 class="w3-center">Iniciar sesión</h2>

            <!-- Campo de usuario -->
            <label for="username">Usuario:</label>
            <input class="w3-input w3-border" type="text" id="username" name="username" required>

            <!-- Campo de contraseña -->
            <label for="password">Contraseña:</label>
            <input class="w3-input w3-border" type="password" id="password" name="password" required>

            <!-- Botón para iniciar sesión -->
            <input class="w3-button w3-teal w3-margin-top" type="submit" value="iniciar sesion">
        </form>
    </div>
</div>
